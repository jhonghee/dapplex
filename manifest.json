{
	"manifest_version": 2,

	"name": "Dapplex - Dynamic Application Extender",
	"description": "The extension allows users to add missing UI features on web application through parameterized URL",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},

	"permissions": ["tabs", "contextMenus"],
	"icons": {
		"16": "icon_18.png",
		"32": "icon_32.png",
		"64": "icon_64.png",
		"128": "icon_128.png"
	},
	"browser_action": {
		"default_icon": "icon_32.png",
		"default_title": "Dynamic Application Extender",
		"default_popup": "popup.html"
	}
}